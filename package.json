{
  "name": "baphomet-server",
  "version": "0.7.0",
  "description": "",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "tsc",
    "copy-files": "mkdir -p dist 2>/dev/null || true && cp -r src/* dist/",
    "build": "pnpm run compile && pnpm run copy-files && ls -la dist/",
    "start": "node dist/server.js",
    "kill-port": "bash kill-port.sh",
    "dev": "pnpm run kill-port && pnpm run build && pnpm start",
    "prod": "NODE_ENV=production npm run start",
    "test-local": "NODE_ENV=development PORT=5051 ATLAS_CLUSTER=dummy ATLAS_DB_USERNAME=dummy ATLAS_DB_PASSWORD=dummy ATLAS_DEV_DB=dummy ACCESS_TOKEN_SECRET=dummy BAPHOMET_UI_URL=http://localhost:3000 npm run dev",
    "update-urls": "node scripts/update-movie-urls.js",
    "update-urls-dry-run": "node scripts/update-movie-urls.js --dry-run",
    "cleanup-votes": "node scripts/cleanup-votes.js",
    "recalculate-stats": "node scripts/recalculate-stats.js",
    "recalculate-stats-dry-run": "node scripts/recalculate-stats.js --dry-run",
    "process-images": "node scripts/process-movie-images-r2.js",
    "process-images-dry-run": "node scripts/process-movie-images-r2.js --dry-run",
    "quick-batch-images": "node scripts/quick-batch-images.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@apollo/subgraph": "^2.9.3",
    "apollo-server-core": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.10.0",
    "node-fetch": "^3.3.2",
    "sharp": "^0.33.5",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.3",
    "typescript": "^5.6.3"
  }
}
